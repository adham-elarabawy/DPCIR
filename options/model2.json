{
  "gpu_ids": [3],

  "numChannels": 1,
  "sigma": [0, 50],
  "sigma_test": 25,

  "datasets": {
    "train": "/mikQNAP/aelarabawy/DPCIR/train/DIV2K/DIV2K_train_HR",
    "test": "/mikQNAP/aelarabawy/DIV2K_valid_HR"
  },

  "model": {
    "in_numChannels": 2,               // number of input channels
    "out_numChannels": 1,              // number of output channels
