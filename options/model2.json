    "act_mode": "R"                    // "BR" for BN+ReLU | "R" for ReLU
  },

  "training": {
    "epochs": 1000000,
    "seed": 1234,
    "batch_size": 64,
    "patch_res": 128,
    "num_workers": 8,
    "learning_rate": 1e-5,
    "lr_period": 100000,
    "lr_gamma": 0.5,

    "checkpoint_save_path": "checkpoints/model2/models",
    "checkpoint_test_path": "checkpoints/model2/testing",

    "checkpoint_test": 5000,
    "checkpoint_save": 5000,
